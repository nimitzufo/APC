#include <stdio.h>

/*Síntese:
Objetivo: ler um vetor e separar os elementos pares dos ímpares.
Entrada:primeira linha, tamanho do vetor, segunda linha, elementos do vetor.
Saída:primeira linha, índice dos valores pares, segunda, dos valores ímpares.*/

int main(){
	int tamV, aux=0;
	
	scanf("%d", &tamV);
	int V[tamV];
	for(aux=0;aux<tamV;aux++){
		scanf("%d", &V[aux]);
	}
	
	for(aux=0;aux<tamV;aux++){
		if(V[aux]%2==0)
			printf("%d ", aux);	
		if(aux==(tamV-1))
				printf("\n");
	}
	for(aux=0;aux<tamV;aux++){
		if(V[aux]%2==1){
			printf("%d ", aux);
		}
	}
	
	
	return 0;
}
